{
  "name": "hypercar",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Saeid Sorourie"
  },
  "engines": {
    "node": ">=14.0.0",
    "yarn": ">=1.22.0",
    "npm": "please-use-yarn"
  },
  "scripts": {
    "dev": "set NODE_ENV=development nodemon",
    "dev2": "ts-node --project tsconfig.server.json server/index.ts",
    "build:server": "tsc --project tsconfig.server.json",
    "build:next": "next build",
    "build2": "npm run build:next && npm run build:server",
    "start2": "set NODE_ENV=production node dist/index.js",
    "build": "next build & tsc --project tsconfig.server.json",
    "start": "set NODE_ENV=production node dist/index.js",
    "types": "tsc --pretty --noEmit",
    "lint": "next lint",
    "format": "prettier --write .",
    "prepare": "husky install",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "b_": "^1.3.4",
    "dotenv-cli": "^6.0.0",
    "express": "^4.18.2",
    "next": "13.0.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.39.5",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@storybook/addon-actions": "^6.5.13",
    "@storybook/addon-essentials": "^6.5.13",
    "@storybook/addon-interactions": "^6.5.13",
    "@storybook/addon-links": "^6.5.13",
    "@storybook/builder-webpack5": "^6.5.13",
    "@storybook/manager-webpack5": "^6.5.13",
    "@storybook/react": "6.5.13",
    "@storybook/testing-library": "^0.0.13",
    "@types/b_": "^1.3.2",
    "@types/express": "^4.17.14",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^8.3.0",
    "cross-env": "^7.0.3",
    "eslint": "8.28.0",
    "eslint-config-next": "13.0.4",
    "eslint-plugin-storybook": "^0.6.7",
    "husky": "^8.0.2",
    "nodemon": "^2.0.20",
    "postcss": "^8.4.19",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.2.4",
    "ts-node": "^10.9.1",
    "typescript": "4.9.3"
  },
  "resolutions": {
    "webpack": "^5"
  }
}
